# coding:utf-8
$:.unshift File.expand_path("../lib", __FILE__)

require 'rubygems'
gem 'rspec', '~> 1.3.0'

begin
   require 'spec/rake/spectask'
rescue LoadError
  raise 'Run `gem install rspec` to be able to run specs'
else
  desc "Run specs"
  Spec::Rake::SpecTask.new do |t|
    t.spec_files = FileList['spec/*_spec.rb']
    t.spec_opts  = %w(-fs --color)
    t.warning    = true
  end
  task :spec
end

task :default => :spec