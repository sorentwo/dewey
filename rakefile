# coding:utf-8
$:.unshift 'lib'

require 'rubygems'
require 'rspec'
require 'rspec/core/rake_task'
require 'hydra'
require 'hydra/tasks'

desc "Run specs"
RSpec::Core::RakeTask.new do |t|
  t.pattern    = 'spec/*_spec.rb'
  t.rspec_opts = %w(-fs --color)
end
task :spec

task :default => :spec

Hydra::TestTask.new('hydra:spec') do |t|
  t.add_files 'spec/*_spec.rb'
end